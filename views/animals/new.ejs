<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs') %>
  <body>
    <%- include("../partials/header.ejs") %>
    <main>
        <a href="/animals/"><button>Back to</button></a>
      <div>
        <form action="/animals" method="post">
          <fieldset>
            <legend>Add a New Animal</legend>

            <label>
              SPECIES:
              <input type="text" name="species" placeholder="Enter Animal Name" />
            </label>

            <label>
              LOCATION:
              <input type="text" name="location" placeholder="Enter Location" />
            </label>

            <label>
              LIFE EXPECTANCY:
              <input type="text" name="lifeExpectancy" placeholder="Enter Life Expectancy" />
            </label>

            <label>
              EXTINCT: <input type="checkbox" name="extinct" />
            </label>
          </fieldset>

          <input type="submit" value="Add a New Animal" />
        </form>
      </div>
    </main>
  </body>
</html>
